{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": ".",
    "target": "es2020",
    "module": "esnext",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "cypress",
      "@synthetixio/synpress/support"
    ],
    "paths": {
      "@badeball/cypress-cucumber-preprocessor/*": ["./node_modules/@badeball/cypress-cucumber-preprocessor/dist/subpath-entrypoints/*"],
      "@pages/*": ["src/front/pages/*"],
      "@widgets/*": ["src/front/widgets/*"],
      "@features/*": ["src/front/features/*"],
      "@entities/*": ["src/front/entities/*"],
      "@shared/*": ["src/front/shared/*"],
      "@core/*": ["src/core/*"],
    }
  },
  "include": [
    "./scripts",
    "test/**/*.ts",
    "src/**/*.ts",
    "custom-chai.d.ts",
    "./typechain-types",
    // ... other included files or directories
  ]
}
